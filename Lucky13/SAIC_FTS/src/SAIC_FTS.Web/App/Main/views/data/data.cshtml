<div class="row clearfix" ng-controller="app.views.data as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <h1>Contract Form</h1>
                </h2>
            </div>
            <div class="body">
                <html>
                <head>
                    <meta charset="utf-8" />
                    <title>Data Manipulation</title>
                </head>
                <body>
                    <form method="post">
                        <fieldset>
                            <legend>Data Information</legend>

                            <style>
                                label{
                                    display: inline-block;
                                    width: 120px;
                                    text-align: right;
                                    vertical-align: middle;
                                }
                                [type="checkbox"].contractForm{
                                    position: static;
                                    margin-left: 15px;
                                    opacity: 1;
                                    transform: scale(1.75);
                                    vertical-align: middle;
                                }
                            </style>

                            <p>
                                <label for="Title">Title:</label>
                                <input type="text" id="Title" align="left" ng-model="title" />
                            </p>

                            <p>
                                <label for="CRN">CRN:</label>
                                <input type="number" id="CRN" align="left" ng-model="crn" />
                            </p>

                            <p>
                                <label for="StartDate">Start Date:</label>
                                <input type="datetime-local" id="StartDate" align="left" ng-model="startDate" />
                            </p>

                            <p>
                                <label for="EndDate">End Date:</label>
                                <input type="datetime-local" id="EndDate" align="left" ng-model="endDate" />
                            </p>

                            <p>
                                <label for="CommonName">Common Name:</label>
                                <input type="text" id="CommonName" align="left" ng-model="commonName" />
                            </p>

                            <p>
                                <label for="ContractStatus">Contract Status:</label>
                                <input type="number" id="ContractStatus" align="left" ng-model="contractStatus" />
                            </p>

                            <p>
                                <label for="CeilingCost">Ceiling Cost: $</label>
                                <input type="number" step="0.01" id="CeilingCost" align="left" ng-model="ceilingCost" />    <!-- step="0.01" allows up to 2 decimal places for input -->
                            </p>

                            <p>
                                <label for="CeilingFee">Ceiling Fee: $</label>
                                <input type="number" step="0.01" id="CeilingFee" align="left" ng-model="ceilingFee" />
                            </p>

                            <p>
                                <label for="CeilingValue">Ceiling Value: $</label>
                                <input type="number" step="0.01" id="CeilingValue" align="left" ng-model="ceilingValue" />
                            </p>

                            <p>
                                <label for="ProjectControlAnalyst">Project Control Analyst:</label>
                                <input type="text" id="ProjectControlAnalyst" align="left" ng-model="projectControlAnalyst" />
                            </p>

                            <p>
                                <label for="Representative">Representative:</label>
                                <input type="text" id="Representative" align="left" ng-model="representative" />
                            </p>

                            <p>
                                <label for="LaborCertificationRequired">Labor Certification Required</label>
                                <input type="checkbox" class="contractForm" id="LaborCertificationRequired" align="left" ng-model="laborCertificationRequired" />
                            </p>

                            <p>
                                <label for="OneLaborCategoryPerPerson">One Labor Category Per Person</label>
                                <input type="checkbox" class="contractForm" id="OneLaborCategoryPerPerson" align="left" ng-model="oneLaborCategoryPerPerson" />
                            </p>

                            <p>
                                <label for="LaborCertificationResumeRequired">Labor Certification Resume Required</label>
                                <input type="checkbox" class="contractForm" id="LaborCertificationResumeRequired" align="left" ng-model="laborCertificationResume" />
                            </p>

                            <p>
                                <label for="OrgID">Organization ID:</label>
                                <input type="text" id="OrgID" align="left" ng-model="orgID" />
                            </p>

                            <p>
                                <label for="ProgramManager">Program Manager:</label>
                                <input type="text" id="ProgramManager" align="left" ng-model="programManager" />
                            </p>

                            <p>
                                <label for="Customer">Customer:</label>
                                <input type="text" id="Customer" align="left" ng-model="customer" />
                            </p>

                            <p>
                                <label for="ContractType">Contract Type:</label>
                                <input type="text" id="ContractType" align="left" ng-model="contractType" />
                            </p>

                            <p>
                                <label for="ExportControlLicense">Export Control License:</label>
                                <input type="text" id="ExportControlLicense" align="left" ng-model="exportControlLicense" />
                            </p>

                            <p>
                                <label for="ContractRecTypeCode">Contract Rec Type Code:</label>
                                <input type="text" id="ContractRecTypeCode" align="left" ng-model="contractRecTypeCode" />
                            </p>

                            <p>
                                <label for="IsKeyPersonnel">Is Key Personnel</label>
                                <input type="checkbox" class="contractForm" id="IsKeyPersonnel" align="left" ng-model="isKeyPersonnel" />
                            </p>

                            <p>
                                <label for="BillingFrequency">Billing Frequency:</label>
                                <input type="text" id="BillingFrequency" align="left" ng-model="billingFrequency" />
                            </p>

                            <!--
                            <p>
                                <input ng-model="selectdoc"
                                onchange="angular.element(this).scope().file_changed(this)"
                                type="file" />
                            </p>
                            <p>
                                <button type="button" ng-click="vm.saveContract();">Upload</button>
                            </p>
                            -->
                            <p>
                                <input type="file" id="file" name="file" />
                            </p>
                            <p>
                                <button ng-click="add()">Upload</button>
                            </p>
                        </fieldset>
                    </form>
                </body>
            </html>
            </div>
        </div>
    </div>
</div>